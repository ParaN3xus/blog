---
import ThemeIcon from "./ThemeIcon.astro";

const classSmallNavItem = "btn btn-ghost w-16";
import { kSiteTitle, kUrlBase } from "$consts";
import { Icon } from "astro-icon/components";
---

<header
  class="bg-base-100 sticky top-0 z-[1] bg-opacity-80 backdrop-blur shadow-lg"
>
  <div class="hidden lg:flex navbar mx-auto w-full max-w-5xl px-16">
    <div class="flex-1">
      <a class="btn btn-ghost text-xl" href={`${kUrlBase}/`}>{kSiteTitle}</a>
    </div>
    <ul class="space-x-2">
      <a class={classSmallNavItem} href={`${kUrlBase}/archive/`}>归档</a>
      <a class={classSmallNavItem} href={`${kUrlBase}/friends/`}>友链</a>
      <a class={classSmallNavItem} href={`${kUrlBase}/about/`}>关于</a>
      <ThemeIcon />
    </ul>
  </div>
  <div class="lg:hidden navbar">
    <div class="navbar-start">
      <div class="dropdown">
        <div tabindex="0" role="button" class="btn btn-ghost btn-circle">
          <Icon name="ri:menu-line" size="24" />
        </div>
        <ul
          tabindex="0"
          class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 p-2 space-y-2 shadow"
        >
          <li>
            <a class={classSmallNavItem} href={`${kUrlBase}/archive/`}>归档</a>
          </li>
          <li>
            <a class={classSmallNavItem} href={`${kUrlBase}/tags/`}>标签</a>
          </li>
          <li>
            <a class={classSmallNavItem} href={`${kUrlBase}/friends/`}>友链</a>
          </li>
          <li>
            <a class={classSmallNavItem} href={`${kUrlBase}/about/`}>关于</a>
          </li>
        </ul>
      </div>
    </div>
    <div class="navbar-center">
      <a class="btn btn-ghost text-xl" href={`${kUrlBase}/`}>{kSiteTitle}</a>
    </div>
    <div class="navbar-end">
      <ThemeIcon />
    </div>
  </div>
</header>
